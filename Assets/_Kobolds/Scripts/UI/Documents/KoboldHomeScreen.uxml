<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" editor-extension-mode="False">
    <ui:VisualElement name="main-container" class="main-container">
        <ui:VisualElement name="main-panel" class="menu-panel">
            <ui:Label text="KOBOLDS" class="game-title" />
            <ui:Button name="social-hub-button" text="Social Hub" class="menu-button primary" />
            <ui:Button name="quick-mission-button" text="Quick Mission" class="menu-button" />
            <ui:Button name="settings-button" text="Settings" class="menu-button" />
            <ui:Button name="quit-button" text="Quit" class="menu-button danger" />
        </ui:VisualElement>
